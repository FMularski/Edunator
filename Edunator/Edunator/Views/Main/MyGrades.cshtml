@using Edunator.Models
@model Edunator.Models.MyGradesViewModel

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/bootstrap.css">
    <link rel="stylesheet" href="~/Content/Site.css" />
    <link rel="icon" href="~/Content/img/icon.png" />

    <title>Edunator</title>
</head>
<body>
    <header>
        <img src="~/Content/img/edunator.png" />
        <img id="book_gif" src="~/Content/img/book2.gif" />
    </header>
    <br />
    <main>
        <br />
        <h3>Logged in as @Model.FirstName @Model.LastName</h3>
        <h1>My grades</h1>
        <table class="table table-hover table-dark w-75">
            <thead>
                <tr>
                    <th scope="col">Date</th>
                    <th scope="col">Grade</th>
                    <th scope="col">Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Grade grade in Model.Grades)
                {
                    if (grade.Value == 1)
                    {
                        <tr>
                            <td style="background-color: red">@grade.Date</td>
                            <td style="background-color: red">@grade.Value</td>
                            <td style="background-color: red">@grade.Description</td>
                        </tr>
                    }
                    if (grade.Value == 2)
                    {
                        <tr>
                            <td style="background-color: orangered">@grade.Date</td>
                            <td style="background-color: orangered">@grade.Value</td>
                            <td style="background-color: orangered">@grade.Description</td>
                        </tr>
                    }
                    if (grade.Value == 3)
                    {
                        <tr>
                            <td style="background-color: #e3d519">@grade.Date</td>
                            <td style="background-color: #e3d519">@grade.Value</td>
                            <td style="background-color: #e3d519">@grade.Description</td>
                        </tr>
                    }
                    if (grade.Value == 4)
                    {
                        <tr>
                            <td style="background-color: greenyellow">@grade.Date</td>
                            <td style="background-color: greenyellow">@grade.Value</td>
                            <td style="background-color: greenyellow">@grade.Description</td>
                        </tr>
                    }
                    if (grade.Value == 5)
                    {
                        <tr>
                            <td style="background-color: forestgreen">@grade.Date</td>
                            <td style="background-color: forestgreen">@grade.Value</td>
                            <td style="background-color: forestgreen">@grade.Description</td>
                        </tr>
                    }
                    if (grade.Value == 6)
                    {
                        <tr>
                            <td style="background-color: dodgerblue">@grade.Date</td>
                            <td style="background-color: dodgerblue">@grade.Value</td>
                            <td style="background-color: dodgerblue">@grade.Description</td>
                        </tr>
                    }

                }
            </tbody>
        </table>
        <br /><br /><br />
        <a href="@Url.Action("BackToMain", "Main")" class="btn btn-outline-dark"><< Back</a>
        <br /><br />
    </main>

    <footer>
        Edunator 2020 &copy; All rights reserved
    </footer>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
</body>
</html>